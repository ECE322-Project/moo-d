<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!-- Cancel button -->

    <ImageButton
        android:id="@+id/cancel_button_2"

        android:contentDescription="cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/white"

        android:src="@drawable/ic_cancel_grey_24dp"/>

    <!-- Back button -->

    <ImageButton
        android:id="@+id/back_button_1"

        android:contentDescription="back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:background="@android:color/white"

        android:src="@drawable/ic_arrow_back_grey_24dp"/>

    <!-- "Anything you'd like to add?" TextView -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Anything you'd like to add?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Display chosen mood -->

    <ImageView
        android:id="@+id/mood_image_view"

        android:contentDescription="mood image view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/activity_image_view"
        android:background="@color/design_default_color_background"

        android:src="@drawable/ic_sentiment_neutral_black_32dp"/>

    <TextView
        android:id="@+id/current_mood_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mood_image_view"
        app:layout_constraintStart_toStartOf="@+id/mood_image_view"
        app:layout_constraintEnd_toEndOf="@+id/mood_image_view"

        android:text="mood"
        android:textSize="12sp"/>

    <!-- Display chosen activity -->

    <ImageView
        android:id="@+id/activity_image_view"

        android:contentDescription="activity image view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toEndOf="@+id/mood_image_view"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        android:background="@color/design_default_color_background"

        android:src="@drawable/ic_sentiment_neutral_black_32dp"/>

    <TextView
        android:id="@+id/current_activity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_image_view"
        app:layout_constraintStart_toStartOf="@+id/activity_image_view"
        app:layout_constraintEnd_toEndOf="@+id/activity_image_view"

        android:text="activity"
        android:textSize="12sp"/>

    <!-- "Who can see this mood?" -->

    <TextView
        android:id="@+id/visibility_preference_textView"

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/current_activity_description"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="@id/textView3"

        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Who can see this mood?"/>

    <!-- Button bar for "Who can see this mood?" -->

    <LinearLayout
        android:id="@+id/button_bar_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/visibility_preference_textView">

        <Button
            android:id="@+id/just_me_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Just me"/>

        <Button
            android:id="@+id/my_followers_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Followers"/>

        <Button
            android:id="@+id/anyone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anyone"/>

    </LinearLayout>

    <!-- "Right now, I'm with this many people:" -->

    <TextView
        android:id="@+id/with_number_people_textView"

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_bar_1"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="@id/textView3"

        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Right now, I'm with this many people:"/>

    <!-- Button bar for "Who can see this mood?" -->

    <LinearLayout
        android:id="@+id/button_bar_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/with_number_people_textView">

        <Button
            android:id="@+id/zero_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <Button
            android:id="@+id/one_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"/>

        <Button
            android:id="@+id/two_plus_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2+"/>

        <Button
            android:id="@+id/a_crowd_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A crowd"/>

        <Button
            android:id="@+id/na_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="N/A"/>

    </LinearLayout>

    <!-- Add an optional photo -->

    <TextView
        android:id="@+id/add_photo_textView"

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_bar_2"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/add_image_button"

        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Add an optional photo:"/>

    <ImageButton
        android:id="@+id/add_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/add_photo_textView"
        app:layout_constraintTop_toTopOf="@id/add_photo_textView"
        app:layout_constraintEnd_toEndOf="@id/textView3"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_photo_textView"
        android:src="@drawable/ic_image_black_24dp"/>

    <!-- Photograph holder, use view_photograph.xml within this LinearLayout -->

    <LinearLayout
        android:id="@+id/photograph_holder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/add_photo_textView"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3">




    </LinearLayout>

    <!-- Finish Button -->
    <Button
        android:id="@+id/finish_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Finish"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="@id/photograph_holder_layout"
        app:layout_constraintTop_toBottomOf="@id/photograph_holder_layout"
        app:layout_constraintStart_toStartOf="@id/photograph_holder_layout"
        app:layout_constraintBottom_toBottomOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>