<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <GridLayout
        android:id="@+id/color_scheme_buttons"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2"
        android:useDefaultMargins="true"
        tools:context=".GridXMLActivity">

        <Button
            android:id="@+id/happy_mood_button"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:backgroundTint="#3F98C0"
            android:text="Default Theme"
            android:textColor="#000000" />

        <Button
            android:id="@+id/sad_mood_button"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:backgroundTint="#13CA91"
            android:text="Neon"
            android:textColor="#000000" />

        <Button
            android:id="@+id/surprised_mood_button"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:backgroundTint="#9BA3A7"
            android:text="Monochrome"
            android:textColor="#000000" />

        <Button
            android:id="@+id/afraid_mood_button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:backgroundTint="#A2D1F1"
            android:text="Pastel"
            android:textColor="#000000" />

    </GridLayout>

    <Button
        android:id="@+id/set_scheme_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorSecondary"
        android:onClick="setColorScheme"
        android:text="Set Color Scheme" />

</LinearLayout>