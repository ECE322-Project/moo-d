<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!-- Cancel button -->

    <ImageButton
        android:id="@+id/cancel_button_2"

        android:contentDescription="cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/white"

        android:src="@drawable/ic_cancel_grey_24dp"/>

    <!-- Back button -->

    <ImageButton
        android:id="@+id/back_button_1"

        android:contentDescription="back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:background="@android:color/white"

        android:src="@drawable/ic_arrow_back_grey_24dp"/>

    <!-- "What's happening right now?" TextView -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="What's happening right now?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Display chosen mood -->

    <ImageView
        android:id="@+id/mood_image_view"

        android:contentDescription="mood image view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        android:background="@android:color/white"

        android:src="@drawable/ic_sentiment_neutral_black_32dp"/>

    <TextView
        android:id="@+id/current_mood_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mood_image_view"
        app:layout_constraintStart_toStartOf="@id/mood_image_view"
        app:layout_constraintEnd_toEndOf="@id/mood_image_view"

        android:text="mood"
        android:textSize="12sp"/>

    <!-- BEGIN ACTIVITY ICONS AND DESCRIPTIONS -->

    <!-- 5 items per row (each row represented by a LinearLayout). 3 rows total.
        Custom item button is of the same form as the other activity choice buttons. -->

    <LinearLayout
        android:id="@+id/activity_icon_layout_row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/current_mood_description"
        app:layout_constraintStart_toStartOf="@id/current_mood_description"
        app:layout_constraintEnd_toEndOf="@id/current_mood_description">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_icon_layout_row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/activity_icon_layout_row1"
        app:layout_constraintStart_toStartOf="@id/current_mood_description"
        app:layout_constraintEnd_toEndOf="@id/current_mood_description">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_icon_layout_row3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/activity_icon_layout_row2"
        app:layout_constraintStart_toStartOf="@id/current_mood_description"
        app:layout_constraintEnd_toEndOf="@id/current_mood_description">

    </LinearLayout>

    <!-- END ACTIVITY ICONS AND DESCRIPTIONS -->


    <!-- Optional Note entry -->

    <EditText
        android:id="@+id/note_entry_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_icon_layout_row3"
        app:layout_constraintStart_toStartOf="@id/current_mood_description"
        app:layout_constraintEnd_toEndOf="@+id/current_mood_description"
        android:layout_marginTop="8dp"
        android:hint="Enter a note (optional)"/>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continue_button_2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="@id/note_entry_editText"
        app:layout_constraintTop_toBottomOf="@id/note_entry_editText"
        app:layout_constraintStart_toStartOf="@id/note_entry_editText"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>