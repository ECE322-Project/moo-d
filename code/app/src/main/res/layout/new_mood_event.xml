<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">


            <!-- EXIT BUTTON -->
            <ImageButton
                android:id="@+id/exit_button"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="8dp"
                android:background="@android:color/white"

                android:contentDescription="Exit Button"
                android:src="@drawable/ic_cancel_grey_24dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <!-- END EXIT BUTTON -->


            <!-- GREETING MESSAGE -->
            <TextView
                android:id="@+id/greeting_message"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="50dp"

                android:text="How are you feeling today?"
                android:textSize="24sp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/selected_date" />
            <!-- END GREETING MESSAGE -->


            <!-- DATE SELECTION AND DISPLAY -->
            <Button
                android:id="@+id/selected_date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:background="#9C9C9C"

                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:text="MONTH, DAY, YEAR"
                android:textSize="18sp"

                app:layout_constraintEnd_toEndOf="@+id/greeting_message"
                app:layout_constraintStart_toStartOf="@id/greeting_message"
                app:layout_constraintTop_toBottomOf="@+id/greeting_message" />
            <!-- END DATE SELECTION AND DISPLAY -->


            <!-- MOOD SCORE BUTTONS -->
            <LinearLayout
                android:id="@+id/mood_score_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_marginTop="20dp"

                app:layout_constraintTop_toBottomOf="@id/selected_date"
                app:layout_constraintStart_toStartOf="@id/greeting_message"
                app:layout_constraintEnd_toEndOf="@id/greeting_message" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_lens_red_48dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_lens_orange_48dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_lens_yellow_48dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_lens_green_48dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_lens_blue_48dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mood_score_buttons_labels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center"

                app:layout_constraintTop_toBottomOf="@id/mood_score_buttons"
                app:layout_constraintStart_toStartOf="@id/greeting_message"
                app:layout_constraintEnd_toEndOf="@id/greeting_message" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="awful" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="okay" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="great" />

            </LinearLayout>
            <!-- END MOOD SCORE BUTTONS -->


            <!-- MOOD SELECTION BUTTONS -->
            <GridLayout
                xmlns:tools="http://schemas.android.com/tools"

                android:id="@+id/mood_selection_buttons"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:columnCount="2"
                android:rowCount="4"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                tools:context=".GridXMLActivity"

                app:layout_constraintTop_toBottomOf="@id/mood_score_buttons_labels"
                app:layout_constraintStart_toStartOf="@id/greeting_message"
                app:layout_constraintEnd_toEndOf="@id/greeting_message"
                app:layout_constraintBottom_toTopOf="@id/location_button">

                <Button
                    android:id="@+id/sad_mood_button"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="Sad"
                    android:drawableLeft="@drawable/ic_sentiment_sad_black_32dp" />

                <Button
                    android:id="@+id/excited_mood_button"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:text="Excited"
                    android:drawableLeft="@drawable/ic_sentiment_very_happy_black_32dp" />

                <Button
                    android:id="@+id/happy_mood_button"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="Happy"
                    android:drawableLeft="@drawable/ic_sentiment_satisfied_happy_32dp" />

                <Button
                    android:id="@+id/tired_mood_button"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:text="Tired"
                    android:drawableLeft="@drawable/ic_sentiment_sick_black_32dp" />

                <Button
                    android:id="@+id/meh_mood_button"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="Meh"
                    android:drawableLeft="@drawable/ic_sentiment_neutral_black_32dp" />

                <Button
                    android:id="@+id/sick_mood_button"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:text="Sick"
                    android:drawableLeft="@drawable/ic_sentiment_sick_black_32dp"/>

            </GridLayout>
            <!-- END MOOD SELECTION BUTTONS -->


            <!-- LOCATION ENTRY -->
            <Button
                android:id="@+id/location_button"

                android:layout_width="250dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"

                android:gravity="center"
                android:text="Use Location (optional)"
                android:drawableLeft="@drawable/ic_near_me_black_24dp"
                android:drawablePadding="20dp"

                app:layout_constraintTop_toBottomOf="@+id/mood_selection_buttons"
                app:layout_constraintStart_toStartOf="@+id/mood_selection_buttons"
                app:layout_constraintEnd_toEndOf="@+id/mood_selection_buttons"
                app:layout_constraintBottom_toTopOf="@id/textView2" />

            <!-- END LOCATION ENTRY -->



            <!-- "What's happening right now?" TextView -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anything you'd like to add?"
                android:textSize="24sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="id/location_button"
                app:layout_constraintBottom_toTopOf="@id/note_entry_editText"/>


            <!-- Optional Note entry -->

            <EditText
                android:id="@+id/note_entry_editText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@id/textView2"
                app:layout_constraintEnd_toEndOf="@id/textView2"
                android:hint="Enter a note (optional)"/>


            <!-- "Who can see this mood?" -->

            <TextView
                android:id="@+id/visibility_preference_textView"

                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/note_entry_editText"
                app:layout_constraintStart_toStartOf="@id/textView2"
                app:layout_constraintEnd_toEndOf="@id/textView2"

                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Who can see this mood?"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_bar_1"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/visibility_preference_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/just_me_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Just me"/>

                <Button
                    android:id="@+id/my_followers_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Followers"/>

            </LinearLayout>


            <!-- "Right now, I'm with this many people:" -->

            <TextView
                android:id="@+id/with_number_people_textView"

                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/button_bar_1"
                app:layout_constraintStart_toStartOf="@id/textView2"
                app:layout_constraintEnd_toEndOf="@id/textView2"

                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Right now, I'm with this many people:"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_bar_2"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/with_number_people_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/zero_button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"/>

                <Button
                    android:id="@+id/one_button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"/>

                <Button
                    android:id="@+id/two_plus_button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="2+"/>

                <Button
                    android:id="@+id/a_crowd_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A crowd"/>

                <Button
                    android:id="@+id/na_button"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="N/A"/>

            </LinearLayout>

            <!-- Add an optional photo -->

            <TextView
                android:id="@+id/add_photo_textView"

                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/button_bar_2"
                app:layout_constraintStart_toStartOf="@id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/add_image_button"

                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Add an optional photo:"/>


            <ImageButton
                android:id="@+id/add_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/add_photo_textView"
                app:layout_constraintTop_toTopOf="@id/add_photo_textView"
                app:layout_constraintEnd_toEndOf="@id/textView2"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/add_photo_textView"
                android:src="@drawable/ic_image_black_24dp"/>


            <!-- Photograph holder, use view_photograph.xml within this LinearLayout -->

            <LinearLayout
                android:id="@+id/photograph_holder_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/add_photo_textView"
                app:layout_constraintStart_toStartOf="@id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2">


            </LinearLayout>


            <!-- Finish Button -->
            <Button
                android:id="@+id/finish_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Finish"

                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="@id/photograph_holder_layout"
                app:layout_constraintTop_toBottomOf="@id/photograph_holder_layout"
                app:layout_constraintStart_toStartOf="@id/photograph_holder_layout"
                app:layout_constraintBottom_toBottomOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>