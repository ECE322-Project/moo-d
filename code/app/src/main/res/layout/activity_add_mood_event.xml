<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- EXIT BUTTON -->
            <ImageButton
                android:id="@+id/exit_button"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="8dp"
                android:background="@android:color/white"

                android:contentDescription="Exit Button"
                android:src="@drawable/ic_cancel_grey_24dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- GREETING MESSAGE -->
            <TextView
                android:id="@+id/greeting_message"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="50dp"

                android:text="How are you feeling today?"
                android:textSize="24sp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/selected_date" />


            <!-- DATE SELECTION AND DISPLAY -->
            <Button
                android:id="@+id/selected_date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:background="#9C9C9C"

                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:text="MONTH, DAY, YEAR"
                android:textSize="18sp"

                app:layout_constraintEnd_toEndOf="@+id/greeting_message"
                app:layout_constraintStart_toStartOf="@+id/greeting_message"
                app:layout_constraintTop_toBottomOf="@+id/greeting_message" />


            <!-- MOOD SELECTION BUTTONS -->
            <GridLayout
                xmlns:tools="http://schemas.android.com/tools"

                android:id="@+id/mood_selection_buttons"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:columnCount="2"
                android:rowCount="4"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                tools:context=".GridXMLActivity"

                app:layout_constraintTop_toBottomOf="@+id/selected_date"
                app:layout_constraintStart_toStartOf="@+id/greeting_message"
                app:layout_constraintEnd_toEndOf="@+id/greeting_message"
                app:layout_constraintBottom_toTopOf="@+id/location_button">

                <Button
                    android:id="@+id/sad_mood_button"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="Sad"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_sentiment_sad_black_32dp"
                    android:backgroundTint="#64b5f6"/>

                <Button
                    android:id="@+id/excited_mood_button"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:text="Excited"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_sentiment_very_happy_black_32dp"
                    android:backgroundTint="#fff176"/>

                <Button
                    android:id="@+id/happy_mood_button"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="Happy"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_sentiment_satisfied_happy_32dp"
                    android:backgroundTint="#81c784"/>

                <Button
                    android:id="@+id/tired_mood_button"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:text="Tired"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_sentiment_sick_black_32dp"
                    android:backgroundTint="#ffb74d" />

                <Button
                    android:id="@+id/meh_mood_button"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="Meh"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_sentiment_neutral_black_32dp"
                    android:backgroundTint="#b39ddb"/>

                <Button
                    android:id="@+id/sick_mood_button"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:text="Sick"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_sentiment_sick_black_32dp"
                    android:backgroundTint="#ff8a65"/>

            </GridLayout>
            <!-- END MOOD SELECTION BUTTONS -->


            <!-- LOCATION ENTRY -->
            <Button
                android:id="@+id/location_button"

                android:layout_width="250dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"

                android:gravity="center"
                android:text="Use Location (optional)"
                android:drawableLeft="@drawable/ic_near_me_black_24dp"
                android:drawablePadding="20dp"

                app:layout_constraintTop_toBottomOf="@+id/mood_selection_buttons"
                app:layout_constraintStart_toStartOf="@+id/mood_selection_buttons"
                app:layout_constraintEnd_toEndOf="@+id/mood_selection_buttons"
                app:layout_constraintBottom_toTopOf="@+id/additional_info_message" />


            <!-- ADDITIONAL INFO MESSAGE -->
            <TextView
                android:id="@+id/additional_info_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anything you'd like to add?"
                android:textSize="24sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_button" />


