<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/default_emoticon"

        android:contentDescription="default_emoticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"

        android:src="@drawable/ic_sentiment_sad_black_32dp"/>

    <TextView
        android:id="@+id/default_emote_textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/default_emoticon"
        app:layout_constraintBottom_toBottomOf="@id/default_emoticon"
        app:layout_constraintTop_toTopOf="@id/default_emoticon"

        android:text="text"/>


</androidx.constraintlayout.widget.ConstraintLayout>